<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/daily_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dayEventTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Events"
        android:textSize="25sp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/dailyEventDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/dayEventTitle">

        <TextView
            android:id="@+id/dailyEventDateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weekly_event_date_title"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dailyEventDate"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/dailyEventDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weekly_event_desc_title"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dailyEventDescription"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="@color/md_theme_dark_outline"
            app:dividerInsetStart="10dp"
            app:dividerInsetEnd="10dp"
            app:dividerThickness="1dp"
            app:layout_constraintTop_toBottomOf="@+id/dailyEventDescription"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>